# 포트 설정
# HTTP 서버 포트 (기본값: 9000)
HTTP_PORT=9000

# WebSocket 서버 포트 (기본값: 8765)
WS_PORT=8765

# AI CLI 경로 (컨테이너 내부 바이너리 이름)
CLAUDE_PATH=claude
DROID_PATH=droid
GEMINI_PATH=gemini

# 간단 로그인 비밀번호 (선택)
# 빈 값이면 로그인 없이 사용 가능
# 반드시 강력한 비밀번호로 교체하세요 (예: openssl rand -base64 32)
APP_LOGIN_USERNAME=
APP_LOGIN_PASSWORD=

# JWT 서명 키 (로그인 사용 시 필수)
# 반드시 무작위 문자열로 교체하세요 (예: openssl rand -hex 32)
APP_JWT_SECRET=
# (하위호환) JWT 만료 시간(초) – ACCESS 기본값으로 사용
APP_JWT_TTL=604800
# Access/Refresh 토큰 TTL (리프레시 토큰 도입용)
# 운영 권장: ACCESS 900~3600, REFRESH 7~30일
APP_ACCESS_TTL=3600
APP_REFRESH_TTL=2592000
APP_REFRESH_ROTATE=1

# 토큰 만료 유예/로그인 rate limit
APP_JWT_GRACE_MINUTES=60
APP_LOGIN_MAX_ATTEMPTS=5
APP_LOGIN_LOCK_MINUTES=15

# WebSocket 접근 URL (reverse proxy 사용 시 설정)
APP_PUBLIC_WS_URL=

# 호스트 인증 디렉터리 (필요 시 환경에 맞게 수정)
# Linux/Mac 예시 경로 — 본인 환경에 맞게 수정하세요.
FACTORY_AUTH_DIR=/home/youruser/.factory
CLAUDE_AUTH_DIR=/home/youruser/.claude
GEMINI_AUTH_DIR=/home/youruser/.gemini
# Windows/WSL 예시
# FACTORY_AUTH_DIR=/mnt/c/Users/YourName/.factory
# CLAUDE_AUTH_DIR=/mnt/c/Users/YourName/.claude
# GEMINI_AUTH_DIR=/mnt/c/Users/YourName/.config/gemini

# AI 제공자 기본 모델/키
# Droid 기본 모델(서버에서만 변경):
DROID_MODEL=custom:glm-4.6
# Gemini 기본 모델(선택, 미설정이면 CLI 기본 auto 사용)
GEMINI_MODEL=

# AI 제공자 API 키 (컨테이너 환경에서 필요)
# Factory AI (Droid) API 키
# https://app.factory.ai/settings/api-keys 에서 발급 가능
FACTORY_API_KEY=your_factory_api_key_here
